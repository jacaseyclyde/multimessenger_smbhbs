  journal = {arXiv:2009.04496 [astro-ph, physics:gr-qc]},
  keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - High Energy Astrophysical Phenomena,General Relativity and Quantum Cosmology},
  primaryclass = {astro-ph, physics:gr-qc}
