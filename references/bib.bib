  volume = {794},
  pages = {141},
  publisher = {{American Astronomical Society}},
  issn = {0004-637X},
  doi = {10.1088/0004-637X/794/2/141},
  abstract = {We perform a search for continuous gravitational waves from individual supermassive black hole binaries using robust frequentist and Bayesian techniques. We augment standard pulsar timing models with the addition of time-variable dispersion measure and frequency variable pulse shape terms. We apply our techniques to the Five Year Data Release from the North American Nanohertz Observatory for Gravitational Waves. We find that there is no evidence for the presence of a detectable continuous gravitational wave; however, we can use these data to place the most constraining upper limits to date on the strength of such gravitational waves. Using the full 17 pulsar data set we place a 95\% upper limit on the strain amplitude of h0 {$\lessequivlnt$} 3.0 \texttimes{} 10-14 at a frequency of 10 nHz. Furthermore, we place 95\% sky-averaged lower limits on the luminosity distance to such gravitational wave sources, finding that dL {$\greaterequivlnt$} 425 Mpc for sources at a frequency of 10 nHz and chirp mass 1010 M{$\Sun$}. We find that for gravitational wave sources near our best timed pulsars in the sky, the sensitivity of the pulsar timing array is increased by a factor of {$\sim$}four over the sky-averaged sensitivity. Finally we place limits on the coalescence rate of the most massive supermassive black hole binaries.},
  file = {/Users/jacaseyclyde/Zotero/storage/47N2IBGC/Arzoumanian et al. - 2014 - GRAVITATIONAL WAVES FROM INDIVIDUAL SUPERMASSIVE B.pdf;/Users/jacaseyclyde/Zotero/storage/RA28DURF/Arzoumanian et al. - 2014 - Gravitational Waves from Individual Supermassive B.pdf},
  journal = {ApJ},
  keywords = {gravitation,pulsars: general},
  language = {en},
  number = {2}
}

@article{arzoumanian_nanograv_2020,
