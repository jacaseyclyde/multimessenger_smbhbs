  archiveprefix = {arXiv},
  eprint = {2102.12428},
  eprinttype = {arxiv},
  file = {/Users/jacaseyclyde/Zotero/storage/JPNZNF3E/Brandenburg et al. - 2021 - Can we observe the QCD phase transition-generated .pdf;/Users/jacaseyclyde/Zotero/storage/KZU9VVMI/2102.html},
  journal = {arXiv:2102.12428 [astro-ph, physics:hep-ph, physics:physics]},
  keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics,High Energy Physics - Phenomenology,Physics - Fluid Dynamics},
