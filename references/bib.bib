  archiveprefix = {arXiv},
  eprint = {2011.12177},
  eprinttype = {arxiv},
  file = {/Users/jacaseyclyde/Zotero/storage/8YP7IRUE/Bhattacharya et al. - 2020 - Detection of Double-Nuclei Galaxies in SDSS.pdf;/Users/jacaseyclyde/Zotero/storage/H6ZIUY32/2011.html},
